{
    "name": "wordpress/installer",
    "description": "Wordpress composer installer.",
    "type": "composer-installer",
    "autoload": {
        "psr-0": { "Wordpress\\Composer":  "src/" }
    },
    "extra": {
        "class": "Wordpress\\Composer\\WordpressInstaller"
    },
    "require": {
        "php": "5.3.*"
    },
    "scripts": {
        "post-install-cmd": "Wordpress\\Composer\\Tasks::init"
    }
}
